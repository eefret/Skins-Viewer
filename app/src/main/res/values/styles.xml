<resources>
    <!-- http://www.google.com/design/spec/style/color.html -->
    <style name="AppTheme.Base.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_material_dark</item>
    </style>

    <style name="AppTheme.Base.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_material_light</item>
    </style>

    <style name="CustomToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- https://developer.android.com/training/material/theme.html -->
        <!-- eg: <item name="android:textColorPrimary">#FFF</item> -->
    </style>
</resources>
